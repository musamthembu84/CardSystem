@model LostCard.Models.mvcCards

@{
    ViewBag.Title = "Log in";
}

<h2>Login</h2>


<div class="form-group">

    @using (Html.BeginForm())
    {
        <div class="form-group">

            @Html.LabelFor(model => model.SNumber)
            @Html.EditorFor(model => model.SNumber)
            @Html.ValidationMessageFor(model => model.SNumber)

        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Campus)
            @Html.EditorFor(model => model.Campus)
            @Html.ValidationMessageFor(model => model.Campus)
        </div>
        <div class="form-group">
            <input type="submit" value="Register Number" />
        </div>
    }


</div>


@section scripts{

    @Scripts.Render("~/bundles/jqueryval");
}
